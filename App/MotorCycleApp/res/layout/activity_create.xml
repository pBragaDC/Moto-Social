<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".Login" >



    <EditText
        android:id="@+id/editText4"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/textbackground"
        android:hint="Title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textbackground"
        android:layout_below="@+id/editText4"
        android:spinnerMode="dropdown"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/Date"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbackground"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_below="@+id/spinner1"
        android:ems="10"
        android:hint="Date"
        android:padding="10dp"
        android:layout_toLeftOf="@+id/Time"
        android:layout_toStartOf="@+id/Time" />

    <EditText
        android:id="@+id/Time"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbackground"
        android:layout_below="@+id/spinner1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Time"
        android:padding="10dp" />


    <EditText
        android:id="@+id/House"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textbackground"
        android:layout_alignLeft="@+id/Date"
        android:layout_below="@+id/Date"
        android:layout_toLeftOf="@+id/Time"
        android:ems="10"
        android:hint="#"
        android:padding="10dp">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/Street"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbackground"
        android:layout_below="@+id/Time"
        android:layout_toRightOf="@+id/House"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Street"
        android:padding="10dp" />

    <EditText
        android:id="@+id/City"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Time"
        android:layout_toRightOf="@+id/Street"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textbackground"
        android:layout_alignRight="@+id/spinner1"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="City"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/State"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@+id/Zip"
        android:layout_alignLeft="@+id/Date"
        android:layout_below="@+id/House"
        android:background="@drawable/textbackground"
        android:ems="10"
        android:hint="State"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/Zip"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Street"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/State"
        android:background="@drawable/textbackground"
        android:ems="10"
        android:hint="ZipCode"
        android:padding="10dp"
        android:layout_alignRight="@+id/City"
        android:layout_alignEnd="@+id/City" />
    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/textbackground"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:gravity="left|top"
        android:hint="Description"
        android:layout_alignLeft="@+id/Date"
        android:inputType="textMultiLine"
        android:layout_below="@+id/State"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/submit"
        android:layout_width="250sp"
        android:layout_height="80sp"
        android:background="@drawable/submitbutton"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

