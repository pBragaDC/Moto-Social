<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="pc.motorcycle.androidapp.FAQ" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequently Asked Questions:"
        android:id="@+id/textView"
        android:textStyle="bold|italic"
        android:textSize="22dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is Live2Ride?"
        android:id="@+id/textView2"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live2Ride is a motorcyclist-friendly application which allows you to connect to the biker world. "
        android:id="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="40dp"
        android:text="Is it free?"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:text="Live2Ride is currently free to use."
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where can I use this app?"
        android:id="@+id/textView15"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView15"
        android:text="You can use this app anytime you have an internet connection. Without internet connection, users cannot login or access the database, so the app will not work. "
        android:textColor="#ffffffff"
        android:textSize="18dp" />

</RelativeLayout>