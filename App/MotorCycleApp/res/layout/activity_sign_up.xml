<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical"
    android:padding="10dip"
    android:id="@+id/signParent"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">>
    
    <TextView
        android:layout_marginTop="10dip"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
    />
    
    <EditText android:id="@+id/userName"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:singleLine="true"
        android:password="false"
        android:background="@drawable/textbackground"
        android:layout_gravity="center_horizontal"
    />
    
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_marginTop="10dip"
        android:layout_toLeftOf="@+id/lname"     
        android:text="First Name"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
    />
    
    <EditText android:id="@+id/fname"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/lname"
        android:password="false"
        android:background="@drawable/textbackground"
        android:layout_gravity="center_horizontal"
    />
     <TextView 

        android:layout_height="wrap_content"
         android:layout_width="250dp"
         android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/fname"
        android:layout_alignRight="@id/fname"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="1dip"
        android:text="Last Name"
         android:textColor="#FFFFFF"
         android:layout_gravity="center_horizontal"
    />
    
    <EditText
        android:id="@+id/lname"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:layout_toRightOf="@+id/fname"
        android:layout_alignRight="@id/fname"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="1dip"
        android:singleLine="true"
        android:password="false"
        android:background="@drawable/textbackground"
        android:layout_gravity="center_horizontal"
    />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_marginTop="10dip"
        android:text="@string/password"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
    />
    
    <EditText android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:singleLine="true"
        android:password="true"
        android:background="@drawable/textbackground"
        android:layout_gravity="center_horizontal"
    /> 
    
     <TextView
        android:layout_height="wrap_content"
         android:layout_width="250dp"
         android:layout_marginTop="10dip"
        android:text="@string/password_again"
         android:textColor="#FFFFFF"
         android:layout_gravity="center_horizontal"
    />
    
    <EditText android:id="@+id/passwordAgain"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:singleLine="true"
        android:password="true"
        android:background="@drawable/textbackground"
        android:layout_gravity="center_horizontal"
    /> 


     <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dip"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"/>
    
     <Button
        android:id="@+id/btnLog"
        android:layout_width="250sp"
        android:layout_height="80sp"
        android:background="@drawable/createbutton"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"/>


     <TextView
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:paddingTop="30dp"
        android:layout_marginBottom="10dip"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"/>
     
     <Button
        android:id="@+id/btnCancel"
        android:layout_width="250sp"
        android:layout_height="80sp"
        android:background="@drawable/cancelbutton"
        android:layout_gravity="center_horizontal" />


</LinearLayout>




